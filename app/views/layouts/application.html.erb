  </head>

  <body>
    <% if user_signed_in? %>
    <%= render 'shared/navbar' %>
    <% end %>
    <%= render 'shared/notices' %>

    <div class="container mx-auto pt-2">
      <%= yield %>
    </div>


    <%= render 'shared/footer' %>
  </body>

