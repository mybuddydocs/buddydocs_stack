
<%= form_with model: @credential, class: "w-full flex flex-col justify-center items-center pb-3" do |f| %>
  <div class='w-full px-3 mx-3 relative inline-flex mb-3'>
    <svg class="ml-2 w-2 h-2 absolute top-0 right-0 m-4 pointer-events-none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 412 232"><path d="M206 171.144L42.678 7.822c-9.763-9.763-25.592-9.763-35.355 0-9.763 9.764-9.763 25.592 0 35.355l181 181c4.88 4.882 11.279 7.323 17.677 7.323s12.796-2.441 17.678-7.322l181-181c9.763-9.764 9.763-25.592 0-35.355-9.763-9.763-25.592-9.763-35.355 0L206 171.144z" fill="#648299" fill-rule="nonzero"/></svg>
    <%= f.collection_select @credential, @connectors, :id, :name, {prompt: "Rercher un organisme dans lequel vous avez déjà un compte."},
        {class: " text-center w-full bg-white text-gray-500 rounded-full  border-solid border-2 border-gray-400 px-4 py-2 focus:outline-none appearance-none"} %>
  </div>
  <div class="w-full px-4">
  <p class="font-bold text-left">Merci de bien vouloir renseigner vos informations de connexion:</p>
  </div>
  <div class="flex w-full h-64 mx-3">
    <div class="w-full bg-gray-200 rounded-md mx-3">
      <div class="flex w-1/4 h-full justify-center items-center">
        <%= image_tag  "document_add/img_doc_amazon.svg" %>
      </div>
    </div>
    <div class="flex-col w-1/4">
      <div class="h-1/3 justify-center items-center">Identifiant</div>
      <div class="h-1/3 justify-center items-center">Mot de passe</div>
      <div class="h-1/3 justify-center items-center"></div>

    </div>

  </div>
  <%= f.submit "Suivant", class: 'text-sm font-semibold bg-indigo-500 text-white rounded-full m-auto p-3 px-12 text-white hover:bg-indigo-500 hover:text-white' %>
<% end %>
