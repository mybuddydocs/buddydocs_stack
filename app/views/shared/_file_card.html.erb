<div class="file flex-1 bg-white m-2 p-3 text-left rounded-lg hover:bg-indigo-600 hover:text-white relative shadow-sm hover:shadow-lg">
    <div class="h-24 my-3 relative">
      <div class="flex flex-wrap-reverse absolute bottom-0">
        <% category.tags.each do |tag| %>
          <%  tag.documents.first(2).each do |document|%>
            <% document.pages.where(page_number: 1).each do |page| %>
              <div class="rounded-md w-1/3 p-1">
                <%= cl_image_tag page.photo.key, alt: document.name, class: 'h-10 bg-white object-cover w-full rounded-md' %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <h2><%= category.name.capitalize %></h2>
    <p class="text-xs font-thin">Dernière mise à jour le 12/08/2019 à 8h30</p>
</div>
