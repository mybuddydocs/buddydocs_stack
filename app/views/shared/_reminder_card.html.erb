<%= link_to document_path(document) do %>
    <div class="group w-100 grid grid-cols-4 gap-4 px-3 py-3 border border-gray-200 mb-1 mx-2 rounded-md hover:bg-indigo-300 hover:text-white bg-white">
        <h4 class="col-span-1 text-sm font-bold text-black-500"><%= document.reminder_date.strftime("%d/%m") %></h4>
        <div class="col-span-2 text text-sm text-left"><%= document.name.truncate(16, separator: '') %></div>
        <div class="col-span-1 text-right opacity-50">
            <i class="fas fa-angle-right"></i>
        </div>
    </div>
<% end %>
