      <span style="display:none;">
        <%= d.file_field :photo %>
      </span>
    </label>
    <% end %>
  </div>

  <div class='my-4 w-full'>
    <%= f.text_field :name , placeholder: 'Nom du document',
      class: 'w-full px-4 py-2 bg-white text-gray-300 rounded-full border-solid border-2 border-gray-300 focus:outline-none'%>
  </div>

  <div class='my-4 w-full'>
    <%= f.fields_for :document_tag do |g| %>
    <%= g.collection_select :tag, @tags, :id, :name, {prompt: "Type de document"},
      {class: "w-full bg-white text-gray-300 rounded-full  border-solid border-2 border-gray-300 px-4 py-2 focus:outline-none"}%>
    <% end %>
  </div>
  <%= f.submit "Ajouter un document", class: 'btn btn-primary hover:bg-indigo-400 justify-self-center focus:outline-none' %>
  <% end %>
</div>
